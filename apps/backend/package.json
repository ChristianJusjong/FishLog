{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc && npm run copy:public",
    "copy:public": "node -e \"const fs=require('fs');const path=require('path');const src='public';const dest='dist/public';if(fs.existsSync(src)){fs.mkdirSync(dest,{recursive:true});fs.readdirSync(src).forEach(f=>fs.copyFileSync(path.join(src,f),path.join(dest,f)));console.log('Copied public folder to dist');}\"",
    "build:ci": "tsc",
    "build:clean": "rimraf dist && prisma generate && tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "seed:badges": "tsx src/scripts/seed-badges.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.3.0",
    "@fastify/websocket": "^11.2.0",
    "@prisma/client": "^6.18.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ws": "^8.18.1",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.8.0",
    "dotenv": "^17.2.3",
    "exif-parser": "^0.1.12",
    "expo-server-sdk": "^4.0.0",
    "fastify": "^5.6.1",
    "groq-sdk": "^0.35.0",
    "jsonwebtoken": "^9.0.2",
    "sharp": "^0.34.5",
    "ws": "^7.5.10",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "graphemer": "^1.4.0",
    "prisma": "^6.18.0",
    "tsx": "^4.16.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
