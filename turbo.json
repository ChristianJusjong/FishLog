{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "prisma/**",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "outputLogs": "new-only"
    },
    "lint": {
      "inputs": [
        "src/**",
        "app/**",
        "components/**",
        ".eslintrc*",
        "eslint.config.*",
        "package.json"
      ],
      "outputs": [],
      "cache": true
    },
    "test": {
      "inputs": [
        "src/**",
        "app/**",
        "components/**",
        "__tests__/**",
        "jest.config.*",
        "package.json"
      ],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "clean": {
      "cache": false
    }
  }
}
